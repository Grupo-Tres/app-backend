// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model user {
  id          String   @id @default(uuid())
  nome        String
  cep         String
  rua         String
  bairro      String
  numero      String
  complemento String
  cidade      String
  estado      String
  email       String
  senha       String
  telefone    String
  admin       Boolean
  pedido      pedido[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model categoria {
  id         String    @id @default(uuid())
  sessaoName String
  secaoId    String
  produtos   produto[]
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
}

model produto {
  id          String     @id @default(uuid())
  nome        String
  descricao   String
  foto        String
  estoque     Boolean
  opcoes      opcoes[]
  quantidade  Int
  disponivel  Boolean
  categoria   categoria  @relation(fields: [categoriaId], references: [id])
  categoriaId String
  carrinho    carrinho[]
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}

model opcoes {
  id        String  @id @default(uuid())
  opcao     String
  preco     Float
  produto   produto @relation(fields: [produtoId], references: [id])
  produtoId String
}

model pedido {
  id           String     @id @default(uuid())
  numeroPedido Int
  user         user       @relation(fields: [userId], references: [id])
  userId       String
  carrinho     carrinho[]
  status       String     @default("Realizado")
  comentarios  String?
  subTotal     Float
  taxaEntrega  Float
  total        Float
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
}

model carrinho {
  id         String   @id @default(uuid())
  pedido     pedido   @relation(fields: [pedidoId], references: [id])
  pedidoId   String
  produto    produto  @relation(fields: [produtoId], references: [id])
  produtoId  String
  nome       String
  opcao      String
  quantidade Int
  preco      Float
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}
