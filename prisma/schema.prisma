// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model user {
  id        String   @id @default(uuid())
  nome      String
  cep       String
  email     String
  telefone  String
  admin     Boolean
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model categoria {
  id         String    @id @default(uuid())
  sessaoName String
  secaoId    String
  produtos   produto[]
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
}

model produto {
  id          String    @id @default(uuid())
  nome        String
  descricao   String
  foto        String
  estoque     Boolean
  opcoes      opcoes[]
  quantidade  Int
  disponivel  Boolean
  categoria   categoria @relation(fields: [categoriaId], references: [id])
  categoriaId String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model opcoes {
  id        String  @id @default(uuid())
  opcao     String
  preco     Float
  produto   produto @relation(fields: [produtoId], references: [id])
  produtoId String
}
